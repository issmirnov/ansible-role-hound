[Unit]
Description=Hound (Code Search Tool)
After=syslog.target
After=network.target

[Service]
Type=simple
User={{ hound_user }}
Group={{ hound_user }}
WorkingDirectory=/etc/hound
ExecStart=/usr/local/bin/houndd --addr=:{{ hound_port }}
Restart=always
RestartSec=2s

[Install]
WantedBy=multi-user.target
